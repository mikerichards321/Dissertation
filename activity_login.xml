<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:background="@drawable/waterfall1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.michael.thegardenapplication.LoginActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etPassword"
        android:hint="Password"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_marginBottom="32dp"
        android:layout_above="@+id/Login"
        android:layout_alignStart="@+id/etUserName" />

    <Button
        android:text="Sign up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btRegister"
        android:textColor="#FFFFFF"
        android:background="@android:color/holo_green_dark"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginBottom="67dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="52dp" />

    <Button
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Login"
        android:textColor="#FFFFFF"
        android:background="@android:color/holo_green_dark"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginStart="33dp"
        android:layout_alignBaseline="@+id/btRegister"
        android:layout_alignBottom="@+id/btRegister"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:id="@+id/etUserName"
        android:hint="User Name"
        android:layout_marginBottom="32dp"
        android:layout_above="@+id/etPassword"
        android:layout_alignEnd="@+id/btRegister"
        android:layout_marginEnd="22dp" />

    <TextView
        android:text="CLYNE GARDENS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Clyne_heading"
        android:textSize="42sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="73dp"
        tools:textColor="@android:color/background_light"
        android:layout_marginEnd="11dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
