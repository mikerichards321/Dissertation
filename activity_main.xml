<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/waterfall1"><![CDATA[
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.michael.thegardenapplication.MainActivity">

    ]]>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/togglemusic"
        style="@style/Widget.AppCompat.Button.Small"
        android:elevation="24dp"
        android:background="@drawable/ic_play_light" />

    <TextView
        android:text="Clyne Gardens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvClyneHeading"
        android:textSize="50sp"
        android:textColor="@color/white"
        android:layout_centerInParent="@+id/map_btn"
        android:layout_marginBottom="18dp"
        android:layout_above="@+id/togglemusic"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/map_btn"
        android:text="Map"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_width="250dp"
        android:layout_height="56dp"
        android:onClick="openMap"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A2A8A1"
        android:shadowDx="0"
        android:shadowDy="-4"
        android:shadowRadius="4"
        android:layout_marginTop="37dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/angry_btn"
        android:text="Gallary"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:onClick="openGallary"
        android:layout_width="250dp"
        android:layout_height="56dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A2A8A1"
        android:shadowDx="0"
        android:shadowDy="-4"
        android:shadowRadius="4"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/website_btn"
        android:text="Website"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_width="250dp"
        android:layout_height="56dp"
        android:onClick="openWebsite"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A2A8A1"
        android:shadowDx="0"
        android:shadowDy="-4"
        android:shadowRadius="4"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/map_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
